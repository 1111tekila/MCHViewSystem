
{
    "metadata" : [
        {
            "src" : [
                {
                    "files" : [
                        "Macaca.ViewSystem.Editor.csproj",
                        "Macaca.ViewSystem.csproj"
                    ],
                    "src"   : "../../../"
                }
            ],
            "dest" : "api",
            "disableGitFeatures" : false,
            "disableDefaultFilter" : false
        }
    ],
    "build"    : {
        "content" : [
            {
                "files" : [
                    "api/**.yml",
                    "api/index.md"
                ]
            },
            {
                "files" : [
                    "toc.yml",
                    "*.md"
                ]
            }
        ],
        "resource" : [
            {
                "files" : [
                    "images/**",
                    "favicon.ico",
                    "logo.svg"
                ]
            }
        ],
        "overwrite" : [
            {
                "files" : [
                    "apidoc/**.md"
                ],
                "exclude" : [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],
        "dest"      : "../docs",
        "globalMetadataFiles" : [
        ],
        "fileMetadataFiles"   : [
        ],
        "template"            : [
            "default"
        ],
        "postProcessors"      : [
        ],
        "markdownEngineName"  : "markdig",
        "noLangKeyword"       : false,
        "keepFileLink"        : false,
        "cleanupCacheHistory" : true,
        "disableGitFeatures"  : false
    }
}